<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="@color/grey"
    android:orientation="vertical">

    <!--top bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple"
        android:layout_marginBottom="@dimen/_10sdp">
        <ImageView
            android:id="@+id/pause_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickPauseBtn"
            app:srcCompat="@drawable/pause_btn" />
        <ImageView
            android:id="@+id/hint_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickHintBtn"
            app:srcCompat="@drawable/hint_btn" />
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="47s"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/dark_purple"/>
        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="1340pt"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/dark_purple"/>
    </LinearLayout>

    <!--question frame-->
    <FrameLayout
        android:id="@+id/question_frame"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_165sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_gravity="center"
        android:background="@drawable/layout_border">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/question_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/al_03"/>
            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/question_image"
                android:layout_alignTop="@+id/question_image"
                android:layout_alignEnd="@+id/question_image"
                android:layout_alignBottom="@+id/question_image"
                android:layout_margin="@dimen/_1sdp"
                android:gravity="center"
                android:textSize="@dimen/_30ssp"/>
        </RelativeLayout>
    </FrameLayout>

    <!--hint-->
    <TextView
        android:id="@+id/hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert hint text here"
        android:textSize="@dimen/_15ssp"
        android:gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:visibility="visible"/>

    <!--answers buttons-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/choice1_btn"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="top"
            android:textSize="@dimen/_25ssp"
            android:background="@drawable/blue_btn"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
        <Button
            android:id="@+id/choice2_btn"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="top"
            android:textSize="@dimen/_25ssp"
            android:background="@drawable/green_btn"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/choice3_btn"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="top"
            android:textSize="@dimen/_25ssp"
            android:background="@drawable/yellow_btn"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
        <Button
            android:id="@+id/choice4_btn"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="top"
            android:textSize="@dimen/_25ssp"
            android:background="@drawable/red_btn"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>


</LinearLayout>