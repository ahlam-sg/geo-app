<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange"
    android:padding="@dimen/_7sdp">

    <ImageView
        android:id="@+id/logout_option"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/logout_ic"
        android:layout_alignParentStart="true"
        android:padding="@dimen/_2sdp"
        android:clickable="true"
        android:onClick="logoutBtn"/>

    <ImageView
        android:id="@+id/credits_option"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/credits_ic"
        android:layout_toStartOf="@id/settings_option"
        android:padding="@dimen/_2sdp"
        android:clickable="true"
        android:onClick="creditsBtn"/>

    <ImageView
        android:id="@+id/settings_option"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:src="@drawable/settings_ic"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_2sdp"
        android:clickable="true"
        android:onClick="settingsBtn"/>

</RelativeLayout>