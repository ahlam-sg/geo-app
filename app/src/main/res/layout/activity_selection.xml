<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection"
    android:background="@color/grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="top"
        app:srcCompat="@drawable/back_btn"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickBackBtn"/>

    <Button
        android:id="@+id/flag_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="top"
        android:text="@string/flags"
        android:textSize="@dimen/_25ssp"
        android:background="@drawable/blue_btn"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:onClick="onClickFlagBtn"/>

    <Button
        android:id="@+id/capital_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="top"
        android:text="@string/capitals"
        android:textSize="@dimen/_25ssp"
        android:background="@drawable/green_btn"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:onClick="onClickCapitalBtn"/>

    <Button
        android:id="@+id/map_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="top"
        android:text="@string/maps"
        android:textSize="@dimen/_25ssp"
        android:background="@drawable/yellow_btn"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:onClick="onClickMapBtn"/>

</LinearLayout>