<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ReviewCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/question_iv"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/lu_flag"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/transparent_grey"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Riyadh"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/option1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/question_iv"
            android:layout_below="@+id/question_tv"
            android:text="Saudi Arabia"
            android:textSize="@dimen/_15ssp"/>
        <TextView
            android:id="@+id/option2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/question_iv"
            android:layout_below="@+id/option1_tv"
            android:text="Saudi Arabia"
            android:textSize="@dimen/_15ssp"/>
        <TextView
            android:id="@+id/option3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/question_iv"
            android:layout_below="@+id/option2_tv"
            android:text="Saudi Arabia"
            android:textSize="@dimen/_15ssp"/>
        <TextView
            android:id="@+id/option4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/question_iv"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@+id/option3_tv"
            android:text="Saudi Arabia"
            android:textSize="@dimen/_15ssp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
