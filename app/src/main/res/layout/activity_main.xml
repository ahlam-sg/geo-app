<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_125sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo"
        android:layout_margin="@dimen/_30sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/play_btn"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickPlayBtn"/>

        <ImageView
            android:id="@+id/leader_board_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/leader_board_btn"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickLeaderBoardBtn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/settings_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/settings_btn"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickSettingsBtn"/>
        <ImageView
            android:id="@+id/credits_btn"
            android:layout_width="@dimen/_82sdp"
            android:layout_height="@dimen/_82sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/credits_ic"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickCreditsBtn"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/login_btn"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/login_btn"
        android:layout_margin="@dimen/_18sdp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickLoginBtn"/>
</LinearLayout>