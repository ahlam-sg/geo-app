        android:onClick="leaderBoardBtn"
        style="@style/Button" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings"
