<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical">

    <include layout="@layout/main_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/user_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_30sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_CIV"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@drawable/defualt_user"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/username_tv"
                    android:layout_marginEnd="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/username_tv"
                    android:text="username"
                    android:textAlignment="center"
                    android:textSize="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfileText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/high_score_label_tv"
                    android:text="@string/high_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_CIV"
                    android:layout_below="@+id/username_tv"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="@style/ProfileText"/>

                <TextView
                    android:id="@+id/high_score_tv"
                    android:text="0000"
                    android:textColor="@color/yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_CIV"
                    android:layout_below="@+id/high_score_label_tv"
                    style="@style/ProfileText"/>

                <TextView
                    android:id="@+id/total_score_label_tv"
                    android:text="@string/total_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_CIV"
                    android:layout_below="@+id/high_score_tv"
                    style="@style/ProfileText"/>

                <TextView
                    android:id="@+id/total_score_tv"
                    android:text="000000"
                    android:textColor="@color/yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_CIV"
                    android:layout_below="@+id/total_score_label_tv"
                    style="@style/ProfileText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/level_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp">

                <TextView
                    android:id="@+id/level_tv"
                    android:text="â˜… Level 1"
                    android:textSize="@dimen/_30ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    style="@style/ProfileText"/>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/level_lpi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_gravity="center"
                    android:max="100"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_below="@+id/level_tv"
                    app:trackCornerRadius="@dimen/_10sdp"
                    app:trackThickness="@dimen/_20sdp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/next_level_tv"
                    android:text="+23499 to next level"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level_lpi"
                    android:layout_centerInParent="true"
                    style="@style/ProfileText"/>
            </RelativeLayout>

            <include layout="@layout/progress_bar"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>