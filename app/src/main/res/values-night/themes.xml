<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoQuiz" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey2</item>
        <item name="colorPrimaryVariant">@color/transparent_sapling</item>
        <item name="colorOnPrimary">@color/sapling</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/transparent_yellow</item>
        <item name="colorSecondaryVariant">@color/ocean_liner</item>
        <item name="colorOnSecondary">@color/ocean_liner</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="background">@color/black2</item>
        <item name="fontFamily">@font/baloo_bhaijaan</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="colorBackgroundFloating">?attr/background</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="textColorAlertDialogListItem">?attr/colorOnPrimary</item>
        <item name="android:listDivider">?attr/colorPrimaryVariant</item>
    </style>

</resources>