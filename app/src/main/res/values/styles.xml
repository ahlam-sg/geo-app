<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_text_states</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="TextInputEditText" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/blue2</item>
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="LabelForEditText" parent="@android:style/Widget.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>

    <style name="SignInText" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="ErrorText" parent="@android:style/Widget.TextView">
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>